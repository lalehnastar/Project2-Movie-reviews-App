<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1>Log In</h1>
    <%= form_tag sessions_path do %>
      <div class="form-group">
        <label>Email</label>
        <%= text_field_tag :email, nil, class: "form-control" %>
      </div>
      <div class="form-group">
        <label>Password</label>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
      <%= submit_tag 'Log in', class: "btn btn-success" %>
      <%= link_to "Don't have an account?", new_user_path, class: 'btn btn-primary' %>
         <img src="http://villageoffaith.org/uploads/6/2/2/8/62282299/1370146_orig.png" class="rounded mx-auto d-block">
    <% end %>
  </div>
</div>