<h1>Movie Listing</h1>
<% if current_user.name == "laleh" %>
<%= link_to 'Add Movie', new_movie_path, { :class=>"btn btn-primary btn-sm active" }%>
<% end %>

<table class='table table-striped'>
<thead>
    <tr>
      <th scope="col">Title</th>
      <% if current_user.name == "laleh" %>
      <th scope="col">Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
        <tr>
            <td>
            <%= link_to movie.name, movie_path(movie) %>
            </td>
            <td>
            <% if current_user.name == "laleh" %>
                <%= link_to 'Edit', edit_movie_path(movie) %>
                <%= link_to 'Delete', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?'} %>
                <% end %>
            </td>
        </tr>
    <% end %>
  </tbody> 
</table>

